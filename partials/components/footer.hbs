<footer class="gh-footer{{#match @custom.header_and_footer_color " Accent color"}} has-accent-color{{/match}} gh-outer">
    <div class="gh-footer-inner gh-inner">

        <div class="gh-footer-bar">
            <span class="gh-footer-logo is-title">
                {{#if @site.logo}}
                <img src="{{img_url @site.logo size=" xs" format="webp" }}" alt="{{@site.title}}">
                {{else}}
                {{@site.title}}
                {{/if}}
            </span>
            <nav class="gh-footer-menu">
                {{navigation type="secondary"}}
            </nav>
            <div class="gh-footer-publication-info">
                <span class="gh-footer-copyright">Copyright {{date format="YYYY"}} Felix</span>
                <span class="gh-footer-issn">ISSN 0140-0711</span>
            </div>
            <div class="gh-footer-social">
                <a href="https://www.instagram.com/felix_imperial/" target="_blank" rel="noopener"
                    aria-label="Instagram">{{> "icons/instagram"}}</a>
                <a href="https://www.linkedin.com/company/feliximperial/" target="_blank" rel="noopener"
                    aria-label="LinkedIn">{{> "icons/linkedin"}}</a>
                <a href="https://x.com/feliximperial" target="_blank" rel="noopener" aria-label="X">{{>
                    "icons/twitter"}}</a>
                <a href="https://bsky.app/profile/feliximperial.bsky.social" target="_blank" rel="noopener"
                    aria-label="Bluesky">{{> "icons/bluesky"}}</a>
                {{!-- Comment out TikTok for now --}}
                {{!-- <a href="https://www.tiktok.com/@felix_imperial" target="_blank" rel="noopener" aria-label="TikTok">{{>
                    "icons/tiktok"}}</a> --}}
            </div>
        </div>

        {{#if @site.members_enabled}}
        {{#unless @member}}
        <section class="gh-footer-signup">
            <h2 class="gh-footer-signup-header is-title">
                {{#if @custom.signup_heading}}{{@custom.signup_heading}}{{else}}{{@site.title}}{{/if}}
            </h2>
            <p class="gh-footer-signup-subhead is-body">
                {{#if @custom.signup_subheading}}{{@custom.signup_subheading}}{{else}}{{@site.description}}{{/if}}
            </p>
            {{> "email-subscription" email_field_id="footer-email"}}
        </section>
        {{/unless}}
        {{/if}}

    </div>
</footer>