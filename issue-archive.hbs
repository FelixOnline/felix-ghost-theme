{{!< default }}

<main class="gh-main gh-outer">
  <section class="gh-archive gh-content gh-inner">
    <div class="gh-archive-inner">
      <header class="gh-archive-wrapper">
        <h1 class="gh-article-title is-title">
          Issue Archive
        </h1>
      </header>
    </div>
  </section>

  <section class="gh-container is-grid is-compact-grid gh-outer">
    <div class="gh-container-inner gh-inner">
      <main class="gh-main">
        <div class="gh-feed">
        {{#get "tags" filter="slug:~^'issue-'" include="count.posts" order="slug desc" limit="all" as |issues|}}
          {{#foreach issues as |issue|}}
            {{#issue}}
              <div class="gh-card">
                <a class="gh-card-link" href="{{url}}">
                  <div class="gh-card-wrapper">
                    <div class="gh-issue-container">
                      <div class="gh-issue{{#unless feature_image}} no-front-cover{{/unless}}">
                        <header class="gh-issue-cover">
                          {{> "feature-image"}}
                        </header>
                        <main class="gh-issue-description">
                            <h3><span class="gh-issue-name">{{name}}</span></h3>
                            {{#if description}}<em>{{description}}</em>{{/if}}
                        </main>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            {{/issue}}
          {{/foreach}}
        {{/get}}
        </div>
      </main>
    </div>
  </section>
</main>
