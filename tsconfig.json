{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "ts-node": {
        "files": true,
        "transpileOnly": false
    },
    "include": [
        "scripts/**/*.ts",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}